<%= if user = current_user(@conn) do %>

  <%= for post <- @posts do %>
    <div id="posts">
      <div class="entry clearfix">

        <!-- Post Title -->
        <div class="entry-title">
          <h2><%= post.title %></h2>
        </div>

        <!-- Post Meta -->
        <ul class="entry-meta clearfix">
          <li><i class="fa fa-calendar"></i><%= post.inserted_at %></li>
          <li><a href="#"><i class="fa fa-user"></i><%= user.username %></a></li>
          <li><i class="fa fa-folder-open-o"></i> <a href="#">General</a>, <a href="#">Media</a></li>
          <li><a href="blog-single.html#comments"><i class="fa fa-comments-o"></i> 13 Comments</a></li>
        </ul>

        <!-- Post Content -->
        <div class="entry-content">
          <p><%= markdown(post.body) %></p>
          <a href="blog-single.html">Read More â†’</a>
        </div>

      </div>
    </div>
  <% end %>



  <br />
  <a class="btn btn-default" href='/users/<%= user.id %>/posts'>View My Posts</a>

<%= else %>
  <div class="jumbotron">
    <h2>Welcome to Potion!</h2>
    <p class="lead">A simple blog platform that<br />does not compromise speed and maintainability.</p>
  </div>

<% end %>
